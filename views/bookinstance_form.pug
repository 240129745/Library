extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='book') 图书:
      select#book.form-control(type='select' placeholder='选择图书' name='book' required='true')
        for book in book_list
          if bookinstance
            option(value=book._id selected=(bookinstance.book.toString()==book._id.toString() ? 'selected' : false)) #{book.title}
          else
            option(value=book._id) #{book.title}

    div.form-group
      label(for='imprint') 发行:
      input#imprint.form-control(type='text' placeholder='出版发行信息(出版社、出版日期、版次、页数等)' name='imprint' required='true' value=(undefined===bookinstance ? '' : bookinstance.imprint))
    div.form-group
      label(for='due_back') 可借日期:
      input#due_back.form-control(type='date' name='due_back' value=(undefined===bookinstance ? '' : bookinstance.due_back))

    div.form-group
      label(for='status') 状态:
      select#status.form-control(type='select' placeholder='选择状态' name='status' required='true')
        option(value='Maintenance') 维护中
        option(value='Available') 在馆可借
        option(value='Loaned') 已借出
        option(value='Reserved') ​​已预约

    button.btn.btn-primary(type='submit') 提交

  if errors
    ul
      for error in errors
        li!= error.msg